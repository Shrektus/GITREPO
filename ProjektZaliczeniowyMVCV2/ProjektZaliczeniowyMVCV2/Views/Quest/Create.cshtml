@model ProjektZaliczeniowyMVCV2.Models.QuestModel

@{
    ViewData["Title"] = "Stwórz Zadanie";
}

<h1 class="text-light">Stwórz Zadanie</h1>

<h5 class="text-light">Uzupełnij informacje</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>Tytuł
                    <input asp-for="Title" class="form-control bg-dark text-light" />
                <span asp-validation-for="Title" class="text-danger"></span>
                </p>
            </div>
            <div class="form-group">
                <p>Opis
                    <input asp-for="Description" class="form-control bg-dark text-light" />
                <span asp-validation-for="Description" class="text-danger"></span>
                </p>
            </div>
            <div class="form-group">
                <p>Nagroda
                <input asp-for="Reward" class="form-control bg-dark text-light" />
                <span asp-validation-for="Reward" class="text-danger"></span>
                </p>
            </div>
            <div class="form-group">
                <p></p>
                <input type="submit" value="Stwórz" class="btn btn-primary"/>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Quest")'">Anuluj</button>
            </div>
        </form>
    </div>
</div>

<div>
    
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
