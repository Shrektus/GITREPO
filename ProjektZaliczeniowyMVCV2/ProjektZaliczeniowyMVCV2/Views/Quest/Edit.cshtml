@model ProjektZaliczeniowyMVCV2.Models.QuestModel

@{
    ViewData["Title"] = "Edytuj";
}

<h1 class="text-light">Edytuj zadanie</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <p>Tytuł
                <input asp-for="Title" class="form-control bg-dark text-light" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </p>
            </div>
            <div class="form-group">
                <p>Opis
                    <input asp-for="Description" class="form-control bg-dark text-light" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </p>
            </div>
            <div class="form-group">
                <p>Nagroda
                    <input asp-for="Reward" class="form-control bg-dark text-light" />
                    <span asp-validation-for="Reward" class="text-danger"></span>
                </p>
            </div>
            <div class="form-group">
                <p>Data wygaśniecia
                    <input asp-for="ExpirationDate" class="form-control bg-dark text-light" />
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </p>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <p></p>
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Quest")'">Anuluj</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
