@model IEnumerable<ProjektZaliczeniowyMVCV2.Models.QuestModel>

@{
    ViewData["Title"] = "Lista Zadań";
}

<center>
    <h1 class="text-light">Lista Zadań</h1>

    <p>
        <button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Create", "Quest")'">Utwórz zadanie</button>
    </p>
</center>
<center>
<button type="button" class="btn btn-secondary btn-lg" onclick="location.href='@Url.Action("Index", "Quest")'">Pokaz wszystkie</button>
    </center>
<table class="table table-striped table-dark">
    <thead>
        <tr class="align-middle">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reward)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="align-middle"> 
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reward)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpirationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-outline-success">Edytuj</a> 

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-outline-danger">Usuń</a>
                </td>
            </tr>

        }
    </tbody>
</table>
